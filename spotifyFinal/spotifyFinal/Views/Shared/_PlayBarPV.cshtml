

<section id="music-player">
    <div class="content" style="width:100% !important;">
        <div class="player-song" style="width:600px;">
            <div class="images">
                <a><img src="~/assets/images/0273a204-f956-4c2f-931f-3b610930f836-Jazz.jpg" alt="song-img"></a>
            </div>
            <div class="song-info">
                >
                <a id="song-name"><span>Name</span></a>
                <div class="artist-name">
                    <a><span>Artist</span></a>

                </div>
            </div>
            <button id="wishlist"><i class="fa-regular fa-heart"></i></button>
            <div class="mobile-buttons">
                <!-- <button id="wishlist-mob"><i class="fa-regular fa-heart"></i></button>
                <button id="play-music-mob"> <i class="fa-solid fa-play"></i></button> -->
                <!-- <button id="stop-music-mob">
                    <i class="fa-solid fa-pause"></i>
                </button> -->
            </div>
        </div>
        <div class="player-control" style="width:500px;">
            <audio id="audio" src=""></audio>
            <div class="first-side">
                <div class="left-side">
                    <button id="random"><i class="fa-solid fa-shuffle"></i></button>
                    <button style="font-size: 25px;" id="backward-step">
                        <i class="fa-solid fa-backward-step"></i>
                    </button>
                </div>
                <button class="play" id="play-pause">
                    <i id="play-icon" class="fa-solid fa-play"></i>
                    <i id="pause-icon" class="fa-solid fa-pause" style="display: none;"></i>
                </button>
                <div class="right-side">
                    <button style="font-size: 25px;" id="forward-step">
                        <i class="fa-solid fa-forward-step"></i>
                    </button>
                    <button id="repeat"><i class="fa-solid fa-repeat"></i></button>
                </div>
            </div>
            <div class="second-side">
                <span id="current-time">00:00</span>
                <div id="playback-progressbar">
                    <div class="progress"></div>
                </div>
                <span id="duration">00:00</span>
            </div>
        </div>
        <div class="control-buttons" style="width:600px;">
            <i class="fa-solid fa-volume-low"></i>
            <input type="range" id="volume" style="height: 4px;" min="0" max="1" step="0.1" value="1">

        </div>
    </div>
</section>
<div class="mobile-playercontroller">
    <div class="content">
        <div class="left-side">
            <div class="mobile-images">
                <a href="#"><img src="../../assets/images/ViralHits.jpg" alt="song-img"></a>
            </div>
            <div class="mobile-song-info">
                <a id="mobile-song-name" href="#"><span>California Love</span></a>
                <div class="mobile-artist-name">
                    <a href="#"><span>Roger</span></a>
                </div>
            </div>
        </div>
        <div class="right-side">
            <button id="wishlist"><i class="fa-regular fa-heart"></i></button>
            <button class="play" id="play-pause-responsive">
                <i id="play-icon" class="fa-solid fa-play"></i>
                <i id="pause-icon" class="fa-solid fa-pause" style="display: none;"></i>
            </button>
        </div>
    </div>
</div>