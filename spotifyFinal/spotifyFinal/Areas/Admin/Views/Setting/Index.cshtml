@using Service.ViewModels.Setting
@model List<SettingVM>
@{
    Layout = "_Layout";
}

<div class="table-responsive container mx-5">
    <div class="col-md-9 col-sm-9 center-margin mt-3">
        <a asp-action="Create" asp-area="Admin" asp-controller="Setting">
            <i class="fa-solid fa-square-plus fa-xl" style="color: #121212;font-size:30px;"></i>

        </a>
        <table class="table table-striped jambo_table bulk_action mt-3">
            <thead style ="background-color:#121212;">
                <tr class="headings">
                    <th class="column-title">Key </th>
                    <th class="column-title">Value </th>
                    <th class="column-title">Operations </th>


                </tr>
            </thead>

            <tbody>
               
                    @foreach (var item in Model)
                    {
                    <tr class="even pointer">
                       
                        <td class=" ">@item.Key</td>
                        <td class=" ">@item.Value</td>
                        <td style=" display:flex; gap:30px;" >
                            <a asp-area="Admin" asp-controller="Setting" asp-route-id=@item.Id asp-action="Detail"><i class="fa-solid fa-circle-info fa-xl" style="color: #121212;"></i></a>
                            <a asp-area="Admin" asp-controller="Setting" asp-route-id=@item.Id asp-action="Edit"><i class="fa-solid fa-pen-to-square fa-xl" style="color: #121212;"></i></a>
                            <form method="post" style="display:inline-block" >
                                <a asp-area="Admin" asp-controller="Setting" asp-route-id="@item.Id" asp-action="Delete">
                                    <i class="fa-solid fa-trash fa-xl" style="color: red;"></i>
                                </a>


                            </form>
                        </td>
                    </tr>

                    }

               


            </tbody>
        </table>
        <div class="item form-group">
            <div class="">
              <a asp-action="Index" asp-area="Admin" asp-controller="Dashboard">
                    <i class="fa-solid fa-right-from-bracket fa-rotate-180 fa-2xl" style="color:#121212;"></i>

              </a>
            </div>
        </div>
    </div>
</div>
<script src="https://kit.fontawesome.com/680cf1a7ac.js" crossorigin="anonymous"></script>