@using Service.ViewModels.SongVMs
@model SongDetailVM

<div class="table-responsive container ">
    <div class="col-md-9 col-sm-9 center-margin mt-3">
        <table class="table table-striped jambo_table bulk_action" style="margin-left:100px;">

            <thead style="background-color:#121212;">
                <tr class="headings">
                    <th class="column-title">Image </th>
                    <th class="column-title">Name </th>
                    <th class="column-title">Path </th>
                    <th class="column-title">Color </th>
                    <th class="column-title">Point Rating </th>
                    <th class="column-title">Category </th>
                    <th class="column-title">Album </th>
                    <th class="column-title">Artist </th>




                </tr>
            </thead>

            <tbody>
                <tr class="even pointer">
                    <td class=" "><img style="width:150px;height:150px;" src="~/assets/images/@Model.ImageUrl" /></td>
                    <td class=" " style="font-size:20px;">@Model.Name</td>
                    <td class=" " style="font-size:20px;">@Model.Path</td>
                    <td class=" " style="font-size:20px;  color: @Model.Color;">@Model.Color</td>
                    <td class=" " style="font-size:20px;">@Model.PointRayting</td>
                    <td class=" " style="font-size:20px;">@Model.CategoryName</td>
                    <td class=" " style="font-size:20px;">@Model.AlbumName</td>
                    <td class=" " style="font-size:20px;">@string.Join(", ", Model.ArtistSongs.Select(m => m.Artist.FullName))</td>





                </tr>
            </tbody>
        </table>
        <div class="item form-group">
            <div class="" style="margin-left:100px;">
                <a asp-action="Index" asp-area="Admin" asp-controller="Song">
                    <i class="fa-solid fa-right-from-bracket fa-rotate-180 fa-2xl" style="color:#121212;"></i>

                </a>


            </div>
        </div>

    </div>
</div>
<script src="https://kit.fontawesome.com/680cf1a7ac.js" crossorigin="anonymous"></script>
