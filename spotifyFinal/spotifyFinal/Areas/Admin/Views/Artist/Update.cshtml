@using Service.ViewModels.ArtistVMs
@model ArtistUpdateVM

<div class="x_content container ">
    <div class="col-md-9 col-sm-9 center-margin ">
        <a asp-action="Index" asp-area="Admin" asp-controller="Artist" style="margin-left:170px;">
            <i class="fa-solid fa-right-from-bracket fa-rotate-180 fa-2xl " style="color:#121212;"></i>
        </a>
        <form style="margin-left:170px;" method="post" class="forms-sample" enctype="multipart/form-data">
            <div class="images" style="display:flex;gap:40px;margin-top:20px">
                <div class="main-image">
                    <h3 style="color:black">Main image</h3>
                    <img width="250" src="~/assets/images/@Model.ImageUrl" />
                </div>
                <div class="bg-image">
                    <h3 style="color:black">Background image </h3>
                    <img width="250" src="~/assets/images/@Model.AboutImg" />
                </div>
            </div>
            <div class="form-group">
                <h4 style="color:black">Main image</h4>
                <input asp-for="@Model.Photo" class="form-control" placeholder="photo">
                <span class="text-danger" asp-validation-for="@Model.Photo"></span>
            </div>
            <div class="form-group">
                <h4 style="color:black">Background image</h4>
                <input asp-for="@Model.AboutPhoto" class="form-control" placeholder="photo">
                <span class="text-danger" asp-validation-for="@Model.AboutPhoto"></span>
            </div>
            <div class="form-group">
                <h4 style="color:black">Fullname</h4>
                <input asp-for="FullName" class="form-control" placeholder="Name">
                <span class="text-danger" asp-validation-for="FullName"></span>
            </div>

            <div>
                <h4 style="color:black">Position</h4>
                <select asp-for="PositionIds" class="form-select w-100">
                    @foreach (var position in Model.Positions)

                    {
                        <option value="@position.Id" style="font-size:15px">@position.Name</option>
                    }
                </select>
                <div>
                    <span asp-validation-for="PositionIds">
                    </span>
                </div>
            </div>
            <button type="submit" class="btn btn-gradient-primary me-2 mt-4">Submit</button>
            <a class="btn btn-light  mt-4" asp-area="Admin" asp-controller="Artist" asp-action="Index">Back</a>
            </form>
    </div>
</div>
<script src="https://kit.fontawesome.com/680cf1a7ac.js" crossorigin="anonymous"></script>