@using Service.ViewModels.ArtistVMs
@model ArtistCreateVM

<div class="x_content container">
    <div class="col-md-9 col-sm-9 center-margin ">
        <a asp-action="Index" asp-area="Admin" asp-controller="Artist" style="margin-left:100px;">

            <i class="fa-solid fa-right-from-bracket fa-rotate-180 fa-2xl " style="color:#121212;"></i>

        </a>
        <form method="post" style="margin-left:100px;" enctype="multipart/form-data">
            <span class="section mt-3">Create Artist</span>
            <div class="field item form-group">
                <label class="col-form-label col-md-3 col-sm-3  label-align" style="color:#121212">FullName</label>
                <div class="col-md-6 col-sm-6">
                    <input asp-for="FullName" class="form-control" placeholder="Add fullname..." required="required" />
                    <span class="text-danger mt-2" asp-validation-for="FullName"></span>

                </div>
            </div>
            <div class="field item form-group">
                <label class="col-form-label col-md-3 col-sm-3  label-align" style="color:#121212">About</label>
                <div class="col-md-6 col-sm-6">
                    <input asp-for="AboutImg" class="form-control" placeholder="Add about..." required="required" />
                    <span class="text-danger mt-2" asp-validation-for="AboutImg"></span>

                </div>
            </div>
            <div class="field item form-group">
                <label class="col-form-label col-md-3 col-sm-3  label-align" style="color:#121212">Image</label>
                <div class="col-md-6 col-sm-6">
                    <label asp-for="Photo"></label>
                    <input asp-for="Photo" class="form-control">
                    <span class="text-danger mt-2" asp-validation-for="Photo"></span>

                </div>
            </div>
           
            <div class="field item form-group">
                <label class="col-form-label col-md-3 col-sm-3  label-align" style="color:#121212">Positions<span class="required">*</span></label>
                <div class="col-md-6 col-sm-6">

                    <select class="form-control text-black mt-3" asp-for="PositionIds" asp-items="@(new SelectList(Model.Positions,"Id","Name"))">
                    </select>
                    <span class="text-danger mt-2" asp-validation-for="PositionIds"></span>

                </div>
            </div>
         



            <button type="submit" class="btn btn-gradient-primary me-2">Submit</button>
            <a class="btn btn-light" asp-area="Admin" asp-controller="Artist" asp-action="Index">Back</a>
        </form>

    </div>
</div>
<script src="https://kit.fontawesome.com/680cf1a7ac.js" crossorigin="anonymous"></script>
