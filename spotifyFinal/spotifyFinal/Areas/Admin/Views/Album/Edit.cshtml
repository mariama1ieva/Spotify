@using Service.ViewModels.AlbumVMs
@model AlbumEditVM

<div class="x_content container ">
    <div class="col-md-9 col-sm-9 center-margin mt-3">
        <a asp-action="Index" asp-area="Admin" asp-controller="Album" style="margin-left:100px;">
            <i class="fa-solid fa-right-from-bracket fa-rotate-180 fa-2xl " style="color:#121212;"></i>
        </a>
        <form class="forms-sample mt-5" method="post" style="margin-left:100px;" enctype="multipart/form-data">
            <img src="~/assets/images/@Model.Image" width="200px;" height="200px;" />
            <input type="hidden" asp-for="@Model.Image" />
            <span class="text-danger mt-2" asp-validation-for="Photo"></span>

            <div class="form-group">
                <labelstyle ="color:#121212">Name</labelstyle>
                <input asp-for="Name" class="form-control" placeholder="Add Name...">
                <span class="text-danger mt-2" asp-validation-for="Name"></span>
            </div>

            <div class="field item form-group">
                <label class="col-form-label col-md-3 col-sm-3 label-align" style="color:#121212">Category:@Model.CategoryName</label>
                <div class="col-md-6 col-sm-6">

                    <select class="form-control text-black mt-3" asp-for="CategoryId" asp-items="@ViewBag.Categories">
                    </select>
                    <span class="text-danger mt-2" asp-validation-for="CategoryId"></span>

                </div>
            </div>
            <div class="field item form-group">
                <label class="col-form-label col-md-3 col-sm-3  label-align" style="color:#121212">Group:@Model.GroupName</label>
                <div class="col-md-6 col-sm-6">

                    <select class="form-control text-black" asp-for="GroupId" asp-items="@ViewBag.Groups">
                    </select>
                    <span class="text-danger mt-2" asp-validation-for="GroupId"></span>

                </div>
            </div>
            <div class="field item form-group">

                <label class="col-form-label col-md-3 col-sm-3  label-align" style="color:#121212">Artist:@string.Join(", ", Model.ArtistFullName)</label>
                <div class="col-md-6 col-sm-6">

                    <select class="form-control text-black mt-3" asp-for="ArtistId" asp-items="@ViewBag.Artists">
                    </select>
                    <span class="text-danger mt-2" asp-validation-for="ArtistId"></span>

                </div>
            </div>
            <div class="form-group">
                <labelstyle ="color:#121212">Photo</labelstyle>
                <input asp-for="Photo" class="form-control" placeholder="Add Photo...">
                <span class="text-danger mt-2" asp-validation-for="Photo"></span>
            </div>
            <button type="submit" class="btn btn-gradient-primary me-2">Submit</button>
            <a class="btn btn-light" asp-area="Admin" asp-controller="Album" asp-action="Index">Back</a>
        </form>
    </div>
</div>
<script src="https://kit.fontawesome.com/680cf1a7ac.js" crossorigin="anonymous"></script>