@using Service.ViewModels.SongVMs
@model SongEditVM

<div class="x_content container ">
    <div class="col-md-9 col-sm-9 center-margin " >
        <a asp-action="Index" asp-area="Admin" asp-controller="Song" style="margin-left:70px;">
            <i class="fa-solid fa-right-from-bracket fa-rotate-180 fa-2xl " style="color:#121212;"></i>
        </a>
        <form class="forms-sample mt-3" method="post" style="margin-left:100px;" enctype="multipart/form-data">
            <img src="~/assets/images/@Model.ImageUrl" width="200px;" height="200px;" />
            <input type="hidden" asp-for="@Model.ImageUrl" />
            <span class="text-danger mt-2" asp-validation-for="PhotoUrl"></span>

            <div class="form-group">
                <label style="color:#121212">Name</label>
                <input asp-for="Name" class="form-control" placeholder="Add Name...">
                <span class="text-danger mt-2" asp-validation-for="Name"></span>
            </div>

            <div class="field item form-group">
                <label class="col-form-label col-md-3 col-sm-3 label-align" style="color:#121212">Category:@Model.CategoryName</label>
                <div class="col-md-6 col-sm-6">

                    <select class="form-control text-black mt-3" asp-for="CategoryId" asp-items="@ViewBag.Categories">
                    </select>
                    <span class="text-danger mt-2" asp-validation-for="CategoryId"></span>

                </div>
            </div>
            <div class="field item form-group">
                <label class="col-form-label col-md-3 col-sm-3  label-align" style="color:#121212">Group:@Model.AlbumName</label>
                <div class="col-md-6 col-sm-6">

                    <select class="form-control text-black" asp-for="AlbumId" asp-items="@ViewBag.Albums">
                    </select>
                    <span class="text-danger mt-2" asp-validation-for="AlbumId"></span>
                    @* @string.Join(", ", Model.ArtistFullName.Select(m => m.Artist.FullName)) *@
                </div>
            </div>
            <div class="field item form-group">
                <label class="col-form-label col-md-3 col-sm-3  label-align" style="color:#121212">Artist:@Model.ArtistFullName</label>
                <div class="col-md-6 col-sm-6">

                    <select class="form-control text-black mt-3" asp-for="ArtistIds" asp-items="@ViewBag.Artists">
                    </select>
                    <span class="text-danger mt-2" asp-validation-for="ArtistIds"></span>

                </div>
            </div>
            <div class="form-group">
                <label style ="color:#121212">Photo</label>
                <input asp-for="PhotoUrl" class="form-control" placeholder="Add Photo...">
                <span class="text-danger mt-2" asp-validation-for="PhotoUrl"></span>
            </div>
            <div class="form-group">
                <label style ="color:#121212">Song</label>
                <input asp-for="SongUrl" class="form-control" placeholder="Add song...">
                <span class="text-danger mt-2" asp-validation-for="SongUrl"></span>
            </div>
            <button type="submit" class="btn btn-gradient-primary me-2">Submit</button>
            <a class="btn btn-light" asp-area="Admin" asp-controller="Song" asp-action="Index">Back</a>
        </form>
    </div>
</div>
<script src="https://kit.fontawesome.com/680cf1a7ac.js" crossorigin="anonymous"></script>